<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('../partials/header'); %>
  </head>
  <body>
    <header>
      <%- include ('../partials/head')%>
    </header>
    <div class="container">
      <h1 style="text-align: center; padding-top: 100px;">Add new Comments</h1>
      <hr
        style="
          width: 100px;
          height: 4px;
          text-align: center;
          background-color: rgb(12, 54, 73);
        "
      />
      <form action="/campgrounds/<%= campgrounds._id %>/comments" method="POST">
        <section style="margin: 20px 10px 10px 10px;">
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-12 col-md-8 col-lg-8 col-xl-6">
                <div class="row align-items-center mt-4">
                  <div class="col">
                    <textarea
                      type="text"
                      class="form-control"
                      name="comment[text]"
                      rows="5"
                      placeholder="text"
                    >
                    </textarea>
                  </div>
                </div>
                <div class="row justify-content-start">
                  <div class="col">
                    <button class="btn btn-lg btn-primary mt-4 w-50">
                      Submit
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </form>
    </div>
    <footer>
      <%- include ('../partials/footer'); %>
    </footer>
  </body>
</html>
