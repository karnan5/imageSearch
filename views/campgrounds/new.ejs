<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('../partials/header'); %>
  </head>
  <body>
    <header>
      <%- include ('../partials/head')%>
    </header>
    <div class="container">
      <form action="/campgrounds" method="POST">
        <section style="margin: 90px 10px 10px 10px;">
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-12 col-md-8 col-lg-8 col-xl-6">
                <div class="row">
                  <div class="col text-center">
                    <h1 class="new-edit-title">Add New Collections</h1>
                    <hr
                      style="
                        width: 150px;
                        height: 8px;
                        text-align: center;
                        background-color: aqua;
                      "
                    />
                  </div>
                </div>
                <div class="row align-items-center">
                  <div class="col mt-4">
                    <input
                      type="text"
                      class="form-control"
                      name="name"
                      placeholder="Image Title"
                    />
                  </div>
                </div>
                <div class="row align-items-center mt-4">
                  <div class="col">
                    <input
                      type="text"
                      class="form-control"
                      name="image"
                      placeholder="Enter the Image Url"
                    />
                  </div>
                </div>
                <div class="row align-items-center mt-4">
                  <div class="col">
                    <textarea
                      type="text"
                      class="form-control w-100"
                      name="description"
                      rows="9"
                      cols="30"
                      placeholder="Enter Message"
                    >
                    </textarea>
                  </div>
                </div>
                <div class="row justify-content-start">
                  <div class="col">
                    <button class="btn btn-lg btn-primary mt-4 w-50">
                      Submit
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </form>
    </div>
    <footer>
      <%- include ('../partials/footer'); %>
    </footer>
  </body>
</html>
